<%= fields_for(layer) do |f| %>
    <div id="layer<%= index+1 %>">
      <%= f.label :name, "Kerroksen nimi *" %>
      <%= f.text_field :name, :class => "span4", :required => true  %>

      <%= f.label :product_name, "Tuotteen nimi" %>
      <%= f.text_field :product_name, :class =>  "span4", :required => false %>

      <%= f.label :thickness, "Paksuus (cm) *" %>
      <%= f.text_field :thickness, :class => "span4", :required => true  %>

      <%= f.label :weight, "Paino (kg/m2) *" %>
      <%= f.text_field :weight, :class => "span4", :required => true  %>
    </div>
<% end %>