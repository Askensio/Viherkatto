<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container" id="navbar-container">
      <%= link_to "Viherkatot", root_path, id: "logo" %>
      <nav>
        <ul class="nav">


          <li class="dropdown">

            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Viherkatot
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Suunnittelutyökalu", '/suunnittele' %></li>
              <li class="divider"></li>
              <% if signed_in? %>
                  <li><%= link_to "Lisää oma viherkatto", new_greenroof_path %></li>
                  <li class="divider"></li>
              <% end %>
              <li><%= link_to "Selaa viherkattoja", greenroofs_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Hae viherkattoja", '/search/greenroofs' %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Kasvit
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if signed_in? && current_user.admin? %>
                <li><%= link_to "Lisää kasvi", new_plant_path %></li>
                <li class="divider"></li>
              <% end %>
              <li><%= link_to "Selaa kasveja", plants_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Hae kasveja", '/search/plants' %></li>
            </ul>
          </li>
          <li><%= link_to "Yhteystiedot", '/contacts' %></li>

        </ul>
        <ul class="nav pull-right">
          <% if signed_in? && current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Admin
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Hallinnoi käyttäjiä", users_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Lisää rakennepaketti", '/bases/new' %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Selaa rakennepaketteja", '/bases' %></li>
                </ul>
              </li>
          <% end %>
          <% if signed_in? %>
              <li>
                <button class="btn btn-custom dropdown-toggle" data-toggle="dropdown" type="button">

                  <i class="icon-user icon-white"></i>
                  <%= current_user[:name] %>
                  <b class="caret"></b>
                </button>
                <ul class="dropdown-menu">
                  <li><%= link_to "Muokkaa tietojasi", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Kirjaudu ulos", '/uloskirjaus' %></li>
                </ul>
              </li>
          <% else %>
              <li> <a class="qmark" id="headqmark" href="" data-placement="left" data-toggle="tooltip" title="Oman viherkaton lisääminen edellyttää rekisteröitymistä ja kirjautumista."><i class= "icon-question-sign"></i></a> </li>
              <li><%= link_to "Kirjaudu", kirjaudu_path %></li>
              <li><%= link_to "Rekisteröidy", rekisteroidy_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

<script type="text/javascript">
    $(function () {
        $(".qmark").tooltip();
    });
</script>
