    <div class="container" id="navbar-container">
      <%= link_to "Viherkatot", root_path, id: "logo" %>
      <nav>
        <ul class="nav">
          <% if signed_in? %>
              <li><%= link_to "Lisää uusi viherkatto", new_greenroof_path %></li>
          <% end %>
          <li><%= link_to "Selaa kasveja", plants_path %></li>
