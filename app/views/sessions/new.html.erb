<% provide :title, 'Kirjaudu' %>
<h1>Kirjaudu järjestelmään</h1>
<div class="row">
  <div class="span5 offset3">
    <%= form_for :session, url: sessions_path do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Kirjaudu", class: "btn btn-large btn-custom" %>
    <% end %>
  </div>
</div>