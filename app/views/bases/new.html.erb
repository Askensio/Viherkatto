<% provide(:title, 'Pohja') %>

<h1>Pohja</h1>

<div class="row">
  <div class="span5 offset3">
    <%= form_for(@base) do |f| %>

      <%= f.label :material %>
      <%= f.text_field :material, :class =>  "span4" %> <i class = "icon-exclamation-sign"></i>

      <%= f.label :thickness %>
      <%= f.text_field :thickness, :class =>  "span4" %> <i class = "icon-exclamation-sign"></i> <a class="qmark" href="" data-placement="right" data-toggle="tooltip" title="Paksuus senttimetreinä"><i class= "icon-question-sign"></i></a>

      <%= f.label :weight %>
      <%= f.text_field :weight, :class =>  "span4" %> <i class = "icon-exclamation-sign"></i> <a class="qmark" href="" data-placement="right" data-toggle="tooltip" title="Paino kiloina neliötä kohti"><i class= "icon-question-sign"></i></a>

      <%= f.label :absorbancy %>
      <%= f.text_field :absorbancy, :class =>  "span4" %> <i class = "icon-exclamation-sign"></i> <a class="qmark" href="" data-placement="right" data-toggle="tooltip" title="Vedenimukyky litroina neliötä kohti"><i class= "icon-question-sign"></i></a>

      <%= f.label :note %>
      <%= f.text_field :note, :class =>  "span4" %>

      <%= f.submit "Lisää pohja", class: "btn btn-large btn-custom" %>
    <% end %>
    <i class = "icon-exclamation-sign"></i> = Pakollinen kenttä
  </div>
</div>