<% provide(:title, 'Yhteystietojen muokkaus') %>

<div class="container">

  <div class="span7">
    <h1>Yhteystietojen muokkaus</h1>
  </div>

  <div class="row-fluid marketing" >
    <div class="span6">
      <%= form_for(@contact) do |f| %>
          <td><%= f.label :otsikko, h("Otsikko: ") %></td>
          <h3><%= f.text_field :otsikko %></h3>
          <table class="table">
            <tr>
              <td><%= f.label :osoite, h("Osoite: ") %></td>
              <td><%= f.text_field :osoite %></td>
            </tr>
            <tr>
              <td><%= f.label :email, h("Sähköposti: ") %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :puhelin, h("Puhelinnumero: ") %></td>
              <td><%= f.text_field :puhelin %></td>
            </tr>
            <tr>
              <td><%= f.label :note, h("Lisätiedot: ") %></td>
              <td>
                <%= f.text_area :note %>
              </td>
            </tr>
            <tr>
              <td><td><%= f.submit "Tallenna muutokset", class: "btn btn-large btn-custom" %></td></td>
            </tr>

          </table>
      <% end %>

    </div>
    <div class="span6">
      <%= image_tag 'viherkatot_logo.jpg', class: "img-polaroid" %>
    </div>

  </div>

</div>

