<% provide(:title, 'Kasvien p채ivitys') %>
<%= stylesheet_link_tag    "bootstrap-select", media: "all" %>
<h1>Kasvin p채ivitys</h1>


<div class="row">
  <div class="span5 offset3">
    <%= form_for(@plant) do |f| %>
        <%= render 'shared/error_plants' %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :latin_name%>
        <%= f.text_field :latin_name %>

        <%= f.label :colour %>
        <%= f.select :colour, colour_categories, {}, :class => "selectpicker show-menu-arrow span5"%>

        <%= f.label "aestethic appeal (0-2)" %>
        <%= f.text_field :aestethic_appeal %>

        <%= f.label :light_requirement %>
        <%= select :plant, :light_requirement, [['Varjoinen',1],['Puolivarjo',2], ['Aurinkoinen',3]], {}, :class => "selectpicker show-menu-arrow span5"%>

        <%= f.label :maintenance %>
        <%= select :plant, :maintenance, [['Helppo',1],['Keskivaikea',2], ['Vaikea',3]], {}, :class => "selectpicker show-menu-arrow span5"%>

        <%= f.label :coverage %>
        <%= select :plant, :coverage, [['Pieni',1],['Keskisuuri',2], ['Suuri',3]], {}, :class => "selectpicker show-menu-arrow span5"%>

        <%= f.label "minimum soil thickness (cm)" %>
        <%= f.text_field :min_soil_thickness %>

        <%= f.label "weight (kg/m2)" %>
        <%= f.text_field :weight %>

        <%= f.label :note %>
        <%= f.text_field :note %>

        <%= f.submit "P채ivit채", class: "btn btn-large btn-custom" %>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "bootstrap-select" %>

<script>$('.selectpicker').selectpicker();</script>
